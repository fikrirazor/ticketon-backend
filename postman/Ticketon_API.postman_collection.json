{
  "info": {
    "name": "Ticketon API",
    "description": "API collection for Ticketon backend - Event ticketing platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "eventId",
      "value": ""
    },
    {
      "key": "transactionId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health",
            "description": "Check if server is running"
          }
        },
        {
          "name": "Sign Up (Customer)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    if (json.data?.token) {",
                  "        pm.collectionVariables.set('token', json.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Customer\",\n  \"email\": \"customer@test.com\",\n  \"password\": \"Password123\",\n  \"confirmPassword\": \"Password123\",\n  \"role\": \"CUSTOMER\",\n  \"referredBy\": \"REFERRAL_CODE_HERE\"\n}"
            },
            "url": "{{baseUrl}}/auth/signup",
            "description": "Register new customer. Token auto-saved. 'referredBy' is optional (referral code of another user)."
          }
        },
        {
          "name": "Sign Up (Organizer)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    if (json.data?.token) {",
                  "        pm.collectionVariables.set('token', json.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Organizer\",\n  \"email\": \"organizer@test.com\",\n  \"password\": \"Password123\",\n  \"confirmPassword\": \"Password123\",\n  \"role\": \"ORGANIZER\"\n}"
            },
            "url": "{{baseUrl}}/auth/signup",
            "description": "Register new organizer. Token auto-saved."
          }
        },
        {
          "name": "Sign In",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const json = pm.response.json();",
                  "    if (json.data?.token) {",
                  "        pm.collectionVariables.set('token', json.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@test.com\",\n  \"password\": \"Password123\"\n}"
            },
            "url": "{{baseUrl}}/auth/signin",
            "description": "Sign in. Token auto-saved to collection variable."
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@test.com\"\n}"
            },
            "url": "{{baseUrl}}/auth/forgot-password",
            "description": "Request reset token. Returns token in data.resetToken for testing (simulating email)."
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"PASTE_TOKEN_HERE\",\n  \"password\": \"NewPassword123\",\n  \"confirmPassword\": \"NewPassword123\"\n}"
            },
            "url": "{{baseUrl}}/auth/reset-password",
            "description": "Reset password using the token received from Forgot Password."
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/users/profile",
            "description": "Get current user profile, referral code, and points."
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Updated Name",
                  "type": "text"
                },
                {
                  "key": "email",
                  "value": "updated@test.com",
                  "type": "text"
                },
                {
                  "key": "avatar",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": "{{baseUrl}}/users/profile",
            "description": "Update profile with optional avatar upload (via Cloudinary)."
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/users",
            "description": "Public. List of all users in the system."
          }
        }
      ]
    },
    {
      "name": "Organizer Management",
      "item": [
        {
          "name": "Dashboard Stats (Default)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/organizer/stats",
            "description": "Get real-time dashboard statistics: Total Revenue, Tickets Sold, and Events Count."
          }
        },
        {
          "name": "Dashboard Stats (Filtered)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/organizer/stats?year=2024&month=2&day=1",
              "host": ["{{baseUrl}}"],
              "path": ["organizer", "stats"],
              "query": [
                {"key": "year", "value": "2024"},
                {"key": "month", "value": "2"},
                {"key": "day", "value": "1"}
              ]
            },
            "description": "Filter dashboard stats by specific year, month, or day."
          }
        },
        {
          "name": "My Events",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/organizer/events?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["organizer", "events"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"}
              ]
            },
            "description": "Paginated list of events created by the logged-in organizer."
          }
        },
        {
          "name": "My Transactions",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/organizer/transactions?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["organizer", "transactions"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"}
              ]
            },
            "description": "List of transactions for all events owned by the organizer."
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Get All Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events?page=1&limit=10&category=MUSIC&location=Jakarta&search=concert",
              "host": ["{{baseUrl}}"],
              "path": ["events"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"},
                {"key": "category", "value": "MUSIC"},
                {"key": "location", "value": "Jakarta"},
                {"key": "search", "value": "concert"}
              ]
            },
            "description": "Public search and filtering for events."
          }
        },
        {
          "name": "Get Event By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/events/{{eventId}}",
            "description": "Public. Details of a specific event."
          }
        },
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "title", "value": "Spectacular Music Festival"},
                {"key": "description", "value": "The biggest music festival of the year."},
                {"key": "address", "value": "Gelora Bung Karno"},
                {"key": "location", "value": "Jakarta"},
                {"key": "startDate", "value": "2025-12-20T19:00:00.000Z"},
                {"key": "endDate", "value": "2025-12-21T02:00:00.000Z"},
                {"key": "price", "value": "250000"},
                {"key": "seatTotal", "value": "5000"},
                {"key": "category", "value": "MUSIC"},
                {"key": "isPromoted", "value": "true"},
                {"key": "image", "type": "file", "src": ""}
              ]
            },
            "url": "{{baseUrl}}/events",
            "description": "Create a new event. Image file upload is required."
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                 {"key": "title", "value": "Updated Festival Title", "type": "text"},
                 {"key": "price", "value": "275000", "type": "text"},
                 {"key": "image", "type": "file", "src": ""}
              ]
            },
            "url": "{{baseUrl}}/events/{{eventId}}",
            "description": "Update event details with optional image upload (via Cloudinary). Only allowed for the organizer who created it."
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/events/{{eventId}}",
            "description": "Soft delete the event."
          }
        },
        {
          "name": "Create Voucher",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"EARLYBIRD15\",\n  \"discountPercent\": 15,\n  \"maxUsage\": 50,\n  \"startDate\": \"2025-01-01T00:00:00.000Z\",\n  \"endDate\": \"2025-12-01T23:59:59.000Z\"\n}"
            },
            "url": "{{baseUrl}}/events/{{eventId}}/vouchers",
            "description": "Create a voucher for an event. Use discountAmount OR discountPercent."
          }
        },
        {
          "name": "Get Event Vouchers",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/events/{{eventId}}/vouchers",
            "description": "List all vouchers for a specific event."
          }
        },
        {
          "name": "Get Event Attendees",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/events/{{eventId}}/attendees",
            "description": "Get a list of users who have purchased tickets for this event."
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Get My Transactions",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/transactions/me?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["transactions", "me"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"}
              ]
            },
            "description": "List of current user's transactions."
          }
        },
        {
          "name": "Create Transaction",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    if (json.data?.id) {",
                  "        pm.collectionVariables.set('transactionId', json.data.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{eventId}}\",\n  \"items\": [{\"quantity\": 2}],\n  \"pointsUsed\": 0,\n  \"voucherId\": null\n}"
            },
            "url": "{{baseUrl}}/transactions",
            "description": "Initial status: WAITING_PAYMENT. \nStatuses: WAITING_PAYMENT, WAITING_ADMIN, DONE, REJECTED, CANCELED, EXPIRED."
          }
        },
        {
          "name": "Submit Payment Proof",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "paymentProof",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": "{{baseUrl}}/transactions/{{transactionId}}/payment-proof",
            "description": "Upload payment proof image. Moves status to WAITING_ADMIN."
          }
        },
        {
          "name": "Approve Transaction (Organizer)",
          "request": {
            "method": "PATCH",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/transactions/{{transactionId}}/approve",
            "description": "Approve payment. Moves status to DONE. Generates points for the customer."
          }
        },
        {
          "name": "Reject Transaction (Organizer)",
          "request": {
            "method": "PATCH",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/transactions/{{transactionId}}/reject",
            "description": "Reject payment. Moves status to REJECTED. Automatically rolls back seats, points, and vouchers."
          }
        },
        {
          "name": "Cancel Transaction",
          "request": {
            "method": "PUT",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/transactions/{{transactionId}}/cancel",
            "description": "User cancels their own transaction. Only allowed if status is WAITING_PAYMENT."
          }
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5,\n  \"comment\": \"Absolutely amazing event! Loved the vibe.\"\n}"
            },
            "url": "{{baseUrl}}/reviews/events/{{eventId}}",
            "description": "Only allowed for users with a 'DONE' transaction for this event."
          }
        },
        {
          "name": "Get My Eligible Reviews",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/reviews/me/eligible",
            "description": "List events that the user has attended but not yet reviewed."
          }
        },
        {
          "name": "Get Event Reviews",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reviews/events/{{eventId}}?page=1&limit=10&sortBy=newest",
              "host": ["{{baseUrl}}"],
              "path": ["reviews", "events", "{{eventId}}"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"},
                {"key": "sortBy", "value": "newest"}
              ]
            },
            "description": "Public. sortBy can be: newest, highest, lowest."
          }
        }
      ]
    }
  ]
}
