{
  "info": {
    "name": "Event Discovery API",
    "description": "Complete API collection for Event Discovery backend with authentication and CRUD operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Organizer\",\n  \"email\": \"organizer@test.com\",\n  \"password\": \"Password123\",\n  \"confirmPassword\": \"Password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"organizer@test.com\",\n  \"password\": \"Password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signin",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signin"]
            }
          }
        }
      ]
    },
    {
      "name": "Events - Public",
      "item": [
        {
          "name": "Get All Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events",
              "host": ["{{baseUrl}}"],
              "path": ["events"]
            }
          }
        },
        {
          "name": "Get Events with Pagination",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events?page=1&limit=5",
              "host": ["{{baseUrl}}"],
              "path": ["events"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Filter by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events?category=Music",
              "host": ["{{baseUrl}}"],
              "path": ["events"],
              "query": [
                {
                  "key": "category",
                  "value": "Music"
                }
              ]
            }
          }
        },
        {
          "name": "Filter by Location",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events?location=Jakarta",
              "host": ["{{baseUrl}}"],
              "path": ["events"],
              "query": [
                {
                  "key": "location",
                  "value": "Jakarta"
                }
              ]
            }
          }
        },
        {
          "name": "Search Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events?search=concert",
              "host": ["{{baseUrl}}"],
              "path": ["events"],
              "query": [
                {
                  "key": "search",
                  "value": "concert"
                }
              ]
            }
          }
        },
        {
          "name": "Combined Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events?category=Music&location=Jakarta&search=rock&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["events"],
              "query": [
                {
                  "key": "category",
                  "value": "Music"
                },
                {
                  "key": "location",
                  "value": "Jakarta"
                },
                {
                  "key": "search",
                  "value": "rock"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events/EVENT_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["events", "EVENT_ID_HERE"]
            }
          }
        }
      ]
    },
    {
      "name": "Events - Protected",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Rock Concert 2026\",\n  \"description\": \"Amazing rock concert featuring top bands\",\n  \"location\": \"Jakarta Convention Center\",\n  \"startDate\": \"2026-03-15T19:00:00Z\",\n  \"endDate\": \"2026-03-15T23:00:00Z\",\n  \"price\": 500000,\n  \"seatTotal\": 1000,\n  \"category\": \"Music\",\n  \"imageUrl\": \"https://example.com/concert.jpg\",\n  \"isPromoted\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events",
              "host": ["{{baseUrl}}"],
              "path": ["events"]
            }
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Rock Concert 2026\",\n  \"price\": 450000,\n  \"seatTotal\": 1200\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events/EVENT_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["events", "EVENT_ID_HERE"]
            }
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/EVENT_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["events", "EVENT_ID_HERE"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "API Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Root Endpoint",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": [""]
            }
          }
        }
      ]
    },
    {
      "name": "Voucher Management",
      "item": [
        {
          "name": "Create Voucher",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"DISCOUNT2026\",\n  \"discountPercent\": 10,\n  \"maxUsage\": 100,\n  \"startDate\": \"2026-01-01T00:00:00Z\",\n  \"endDate\": \"2026-12-31T23:59:59Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events/EVENT_ID_HERE/vouchers",
              "host": ["{{baseUrl}}"],
              "path": ["events", "EVENT_ID_HERE", "vouchers"]
            }
          }
        },
        {
          "name": "Get Event Vouchers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/EVENT_ID_HERE/vouchers",
              "host": ["{{baseUrl}}"],
              "path": ["events", "EVENT_ID_HERE", "vouchers"]
            }
          }
        },
        {
          "name": "Validate Voucher",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/vouchers/DISCOUNT2026/validate",
              "host": ["{{baseUrl}}"],
              "path": ["vouchers", "DISCOUNT2026", "validate"]
            }
          }
        },
        {
          "name": "Validate Voucher (with Event)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/vouchers/DISCOUNT2026/validate?eventId=EVENT_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["vouchers", "DISCOUNT2026", "validate"],
              "query": [
                {
                  "key": "eventId",
                  "value": "EVENT_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Update Voucher",
          "request": {
            "method": "PUT",
            "header": [
               {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"maxUsage\": 200,\n  \"endDate\": \"2026-12-31T23:59:59Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/vouchers/VOUCHER_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["vouchers", "VOUCHER_ID_HERE"]
            }
          }
        },
         {
          "name": "Delete Voucher",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/vouchers/VOUCHER_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["vouchers", "VOUCHER_ID_HERE"]
            }
          }
        }
      ]
    }
  ]
}
