// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ORGANIZER
}

enum EventType {
  FREE
  PAID
}

enum TransactionStatus {
  WAITING_PAYMENT
  WAITING_ADMIN
  DONE
  REJECTED
  EXPIRED
  CANCELED
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  role         Role
  avatar       String?
  referralCode String   @unique
  referredById String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  referredBy   User?    @relation("ReferralRelation", fields: [referredById], references: [id])
  referrals    User[]   @relation("ReferralRelation")

  events       Event[]
  transactions Transaction[]
  points       Point[]
  reviews      Review[]
}

model Event {
  id          String   @id @default(uuid())
  organizerId String
  title       String
  description String
  location    String
  image       String?
  startDate   DateTime
  endDate     DateTime
  price       Int      // IDR
  seatTotal   Int
  seatLeft    Int
  type        EventType
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  organizer   User     @relation(fields: [organizerId], references: [id])
  transactions Transaction[]
  vouchers    Voucher[]
  reviews     Review[]
}

model Transaction {
  id           String             @id @default(uuid())
  userId       String
  eventId      String
  status       TransactionStatus
  totalPrice   Int
  pointsUsed   Int                @default(0)
  paymentProof String?
  voucherId    String?
  couponId     String?
  expiresAt    DateTime
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  user         User               @relation(fields: [userId], references: [id])
  event        Event              @relation(fields: [eventId], references: [id])
  voucher      Voucher?           @relation(fields: [voucherId], references: [id])
  coupon       Coupon?            @relation(fields: [couponId], references: [id])
  items        TransactionItem[]
}

model TransactionItem {
  id            String   @id @default(uuid())
  transactionId String
  quantity      Int
  price         Int

  transaction   Transaction @relation(fields: [transactionId], references: [id])
}

model Point {
  id        String   @id @default(uuid())
  userId    String
  amount    Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model Voucher {
  id        String   @id @default(uuid())
  code      String   @unique
  eventId   String
  discount  Int
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())

  event     Event    @relation(fields: [eventId], references: [id])
  transactions Transaction[]
}

model Coupon {
  id        String   @id @default(uuid())
  code      String   @unique
  discount  Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  transactions Transaction[]
}

model Review {
  id        String   @id @default(uuid())
  userId    String
  eventId   String
  rating    Int
  comment   String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  event     Event    @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}
