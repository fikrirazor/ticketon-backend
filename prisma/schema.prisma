// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  CUSTOMER
  ORGANIZER
}

enum EventCategory {
  MUSIC
  NIGHTLIFE
  WORKSHOP
  FOOD
  ARTS
  SPORTS
  TECH
}

enum TransactionStatus {
  WAITING_PAYMENT
  WAITING_ADMIN
  DONE
  REJECTED
  EXPIRED
  CANCELED
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  role         Role
  referralCode String   @unique
  referredById String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  ratingSummary Float    @default(0)
  avatarUrl     String?
  resetPasswordToken   String?
  resetPasswordExpires DateTime?

  referredBy   User?    @relation("ReferralRelation", fields: [referredById], references: [id])
  referrals    User[]   @relation("ReferralRelation")

  events       Event[]
  transactions Transaction[]
  points       Point[]
  reviews      Review[]
  coupons      Coupon[]
}

model Location {
  id     Int     @id @default(autoincrement())
  city   String  @unique
  events Event[]
}

model Event {
  id          String   @id @default(uuid())
  organizerId String
  locationId  Int
  title       String
  description String
  address     String
  startDate   DateTime
  endDate     DateTime
  price       Int      // IDR
  seatTotal   Int
  seatLeft    Int
  category    EventCategory
  imageUrl    String?
  isPromoted  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?
  rating      Float    @default(0)

  organizer   User     @relation(fields: [organizerId], references: [id])
  location    Location @relation(fields: [locationId], references: [id])
  transactions Transaction[]
  vouchers    Voucher[]
  reviews     Review[]
}

model Transaction {
  id              String             @id @default(uuid())
  userId          String
  eventId         String
  voucherId       String?
  couponId        String?
  pointsUsed      Int                @default(0)
  totalPrice      Int
  finalPrice      Int
  status          TransactionStatus  @default(WAITING_PAYMENT)
  paymentProofUrl String?
  expiresAt       DateTime
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  user            User               @relation(fields: [userId], references: [id])
  event           Event              @relation(fields: [eventId], references: [id])
  voucher         Voucher?           @relation(fields: [voucherId], references: [id])
  coupon          Coupon?            @relation(fields: [couponId], references: [id])
  items           TransactionItem[]
}

model TransactionItem {
  id            String   @id @default(uuid())
  transactionId String
  quantity      Int
  price         Int

  transaction   Transaction @relation(fields: [transactionId], references: [id])
}

model Point {
  id        String   @id @default(uuid())
  userId    String
  amount    Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model Voucher {
  id              String   @id @default(uuid())
  code            String   @unique
  eventId         String
  discountAmount  Int?
  discountPercent Int?
  maxUsage        Int      @default(100)
  usedCount       Int      @default(0)
  startDate       DateTime
  endDate         DateTime
  createdAt       DateTime @default(now())

  event           Event    @relation(fields: [eventId], references: [id])
  transactions    Transaction[]
}

model Coupon {
  id        String   @id @default(uuid())
  userId    String?  // Optional for user-specific coupons
  code      String   @unique
  discount  Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])
  transactions Transaction[]
}

model Review {
  id        String   @id @default(uuid())
  userId    String
  eventId   String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  event     Event    @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}
